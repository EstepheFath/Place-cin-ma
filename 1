age_personne = int(input("Quelle est votre age?"))

if age_personne >= 18:
   print ("Vous devez payer 15 euros.")

elif age_personne <= 17:
   print ("Vous devez payer 8 euros.")

popcorn = input("Voulez-vous du popcorn? (Oui, Non)")

if popcorn == "Oui":
   input("Cela vous fera 3 euros suplémentaire. Voici vos billets, bonne séance!")

elif popcorn == "Non":
   print("Voici vos billets, bonne séance!")
